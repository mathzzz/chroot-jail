# -----------------------------------------------------------------------------
#
# extract_open_from_ldd($line);
# extract open calls from the output of ldd
#
# -----------------------------------------------------------------------------

undef &extract_open_from_ldd;

*extract_open_from_ldd = \&extract_open_from_ldd_irix;

sub extract_open_from_ldd_irix {
  local ($line) = @_;

  local $file;
  local $val;

  if ($line =~ /\s:\sopen\(\"(.+)\".+\)\s*=\s*([-]?\d+)/)  {
    $file = $1;
    $val = $2;
    return($file,$val);
  }
  return();
}


1;

