@PASSWD_USERS = ( "root", "daemon", "bin", "kmem", "tty", "man", "nobody" );
@GROUP_USERS =  ( "wheel", "daemon", "kmem", "sys", "tty", "bin", "man", "staff", 
		  "nogroup", "nobody" );

@DEVICE_FILES = ( "/dev/zero", "/dev/null", "/dev/urandom" );

